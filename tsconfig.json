{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"references": [
		{
			"path": "./tsconfig.build.json"
		}
	],
	"exclude": ["node_modules"]
}
